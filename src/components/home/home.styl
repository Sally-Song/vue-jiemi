.slider-wrapper
  position: relative
  width: 100%
  overflow: hidden
.firstFloor
  display: flex
  padding: 3% 2%
  background: #fff
.catalog
  flex: 1
  text-align: center
  img
    display: inline-block
    width: 65px
    height: 65px
    margin-bottom: 10px
  p
    font-size: $font-size-medium
.activties
  background: #fff
  margin: 2% 0
.activty
  &
  h5
    font-size: font-size-medium-x
    margin-bottom: 5px
  p
    font-size: $font-size-small-s
    margin-bottom: 5px 
.product
  display: flex
  img
    display: inline-block
    flex: 1

    